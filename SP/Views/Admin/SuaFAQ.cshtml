@model SetPortal.Models.FAQ
@{
    ViewBag.Title = "SuaItem";
    Layout = "~/Views/Layout/LoginLayout.cshtml";
}
<link href="~/Content/CSSTuChinh/SuaEGuild.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<h2>SuaItem</h2>
@using (Html.BeginForm())
{
    <div class="DivChuDe2">Chủ đề:</div><div class="DivChuDe">@Html.DropDownList("MaChuDeFAQ", (IEnumerable<SelectListItem>)ViewBag.MaChuDeFAQ, "", new { @class = "form-control" })</div><span id="loichude"></span><br /><br />
    <div class="DivChuDe2">Question:</div><div class="DivNoiDungSua">@Html.TextAreaFor(model => model.Question, new {@class="form-control" })</div><span id="loiquestion"></span><br /><br /><br /><br /><br /><br />
    <div class="DivChuDe2">Answer:</div><div class="DivNoiDungSua">@Html.TextAreaFor(model => model.Answer, new { @class = "form-control" })</div><span id="loianswer"></span>
    <div>@Html.HiddenFor(model => model.FileName)</div>
    <div>@Html.HiddenFor(model => model.FaqID)</div><br /><br /><br /><br /><br />
    <div class="submitadd"><input id="submitsuaeguild" class="btn btn-primary" type="submit" value="Update" /><a href="/Admin/QuanLyFAQ"><input class="btn btn-primary" id="quayve" type="button" value="Quản lý FAQ" /></a></div>
}
<script type="text/javascript">
    $('#submitsuaeguild').click(function () {
        var loi = 0;
        if ($('#MaChuDeFAQ').val() == '') {
            $('#loichude').text('Vui long chon chu de!')
            loi++;
        }
        else {
            $('#loichude').text('')
        }
        //LoiQuestion
        if ($('#Question').val().length <6) {
            $('#loiquestion').text('Vui long nhap 6 ky tu tro len!')
            loi++;
        }
        else {
            $('#loiquestion').text('')
        }
        //LoiAnswer
        if ($('#Answer').val().length < 6) {
            $('#loianswer').text('Vui long nhap 6 ky tu tro len!')
            loi++;
        }
        else {
            $('#loianswer').text('')
        }
        if(loi == 0)
        {
            return true;
        }
        else
        {
            return false;
        }
    })
</script>

