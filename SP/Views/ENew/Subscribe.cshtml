@model SetPortal.Models.EmailSubcribeEnew
@{
    ViewBag.Title = "Subscribe";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}

<link href="~/Content/CSSTuChinh/ENewSubscribe.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
@using (Html.BeginForm())
{
    <div class="Div1"><a href="/Home/Index">Home</a>><a href="/ENew/Subscribe">MyGSet e-News Subscription</a></div>
    <div class="DivAllSub">
        <div class="Div10">Subscribe from MyGSet e-News</div>
        <hr />
        <div class="Div2">Subscribe to the MyGSet e-News and we will notify you by e-mail when we add news releases, fact sheets tax tips, or tax alerts to our Web site.</div>
        <div class="Div3"><div class="Span1">To Subscribe</div></div><div class="Div4">Enter your e-mail address in the below and click on Submit To delete any infomation, click on  Clear</div>
        <div class="Div3"><div class="Span2">Note</div></div><div class="Div4">We will star sending your e-News alert to your e-mail address. Please check your e-mail</div>
        @{if(Session["Email"]!=null)
          {
              string email = Session["Email"].ToString();
              <div class="Div6"><div class="Span3">E-mail Address</div></div><div class="Div7">@Html.TextBox("EmailSubcribe", Session["Email"].ToString(), new { @class = "form-control", @readonly = true })<span class="LoiEmail">@ViewBag.thongbao</span></div>
          }
          else {    
        <div class="Div6"><div class="Span3">E-mail Address</div></div><div class="Div7">@Html.TextBoxFor(model => model.EmailSubcribe, new { @class = "form-control" })<span class="LoiEmail">@Html.ValidationMessageFor(model => model.EmailSubcribe)@ViewBag.thongbao</span></div>
        }
        }
        <div class="Div5"><input id="Clear" class="btn btn-primary" value="Clear" type="button" /><input class="btn btn-primary" value="Submit" type="submit" /></div>
    </div>
}
<script type="text/javascript">
    $('#Clear').click(function () {
        $('#EmailSubcribe').val('')
    })
</script>
