@model SetPortal.Models.UserAdmin
@{
    ViewBag.Title = "LoginAdmin";
    Layout = "~/Views/Layout/LoginLayout.cshtml";
}
<link href="~/Content/CSSTuChinh/LoginAdmin.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
@using (Html.BeginForm())
{ 
<div class="DivAllAdLo">
    <div class="DivTitleLo">Login to your account</div>
    <span class="thongbao">@ViewBag.thongbao</span>
    <div>@Html.TextBoxFor(model => model.UserName, new {@class="form-control",@placeholder="UserName" })</div>
    <span id="LoiUser"></span>
    <div>@Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Password" })</div>
    <span id="LoiPass"></span>
    <div><input class="btn btn-primary" id="DivSub" type="submit" value="Login" /></div>
</div>
}
<script type="text/javascript">
    $('#DivSub').click(function () {
        var loi = 0;
        if(($('#UserName').val().length < 5) || ($('#UserName').val().length > 10))
        {
            $('#LoiUser').text('Tai khoan tu 5 den 10 ky tu!')
            loi++
        }
        else
        {
            $('#LoiPass').text('')
        }
        if (($('#Password').val().length < 5) || ($('#Password').val().length > 10)) {
            $('#LoiPass').text('Mat khau tu 5 den 10 ky tu!')
            loi++
        }
        else {
            $('#LoiPass').text('')
        }
        if(loi != 0)
        {
            return false;
        }
        else {
            return true;
        }
    })
</script>